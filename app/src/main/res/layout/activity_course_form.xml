<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kewo.huda.CourseForm"
    android:orientation="vertical"  >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textColor="@color/colorWhite"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:id="@+id/title"/>

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="First Name:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/fname"
                    android:inputType="textPersonName"
                    android:hint="Your first name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Last Name:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/lname"
                    android:inputType="textPersonName"
                    android:hint="Your last name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Father Name:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/father_name"
                    android:inputType="textPersonName"
                    android:hint="Your father name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/email_address"
                    android:inputType="textEmailAddress"
                    android:hint="Enter email address"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Contact No.1:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/contact_number_1"
                    android:inputType="phone"
                    android:hint="Enter phone number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Contact No.2:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/contact_number_2"
                    android:inputType="phone"
                    android:hint="Enter phone number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Date of birth:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/date_of_birth"
                    android:inputType="date"
                    android:hint="mm/dd/yyyy" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/age"
                    android:inputType="number"
                    android:hint="Enter phone number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_group">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="20sp"
                        android:fontFamily="@font/lato"
                        android:id="@+id/male"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="20sp"
                        android:fontFamily="@font/lato"
                        android:id="@+id/female"/>


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Cnic/B-Form:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/cnic_b_form"
                    android:inputType="number"
                    android:hint="Enter number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Street Youth:"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radio_group3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Yes"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="No"
                        android:textSize="20sp" />


                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="District:"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/address"
                    android:inputType="text"
                    android:hint="Enter address" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Qualification:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/qualification"
                    android:inputType="text"
                    android:hint="Enter qualification" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Skills:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/skills"
                    android:inputType="text"
                    android:hint="Mention Skills" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Program:"
                        android:textSize="20sp"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginRight="5dp"/>
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_group2">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekdays"
                            android:textSize="20sp"
                            android:fontFamily="@font/lato"
                            android:id="@+id/weekday"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekend"
                            android:textSize="20sp"
                            android:fontFamily="@font/lato"
                            android:id="@+id/weekend"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any"
                            android:textSize="20sp"
                            android:fontFamily="@font/lato"
                            android:id="@+id/any"/>

                    </RadioGroup>

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Referred By:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/referred_by"
                    android:inputType="text"
                    android:hint="Write it" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <Button


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="30dp"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/register"/>

            </LinearLayout>


</LinearLayout>
    </ScrollView>
</LinearLayout>