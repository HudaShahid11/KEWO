<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseForm"
    android:orientation="vertical"  >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Course"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textColor="@color/colorWhite"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Course Title:"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:fontFamily="@font/lato"
            android:id="@+id/title"/>

    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/name"
                    android:inputType="textPersonName"
                    android:hint="Enter name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"
                    android:hint="Enter email address"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Cnic:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/cnic"
                    android:inputType="number"
                    android:hint="Enter cnic number" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Phone no:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/phone"
                    android:inputType="phone"
                    android:hint="Enter phone number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Qualification:"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/qualification"
                    android:inputType="number"
                    android:hint="Enter qualification" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why do you want to join this course?"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginRight="5dp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:id="@+id/reason"
                    android:inputType="number"
                    android:hint="Enter reason for joining this course." />
                <Button


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="30dp"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/register"/>

            </LinearLayout>


</LinearLayout>
    </ScrollView>
</LinearLayout>